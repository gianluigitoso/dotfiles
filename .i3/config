# dual monitor config
exec_always xrandr --output DFP3 --mode 1680x1050 --pos 1280x0 --rotate normal --output CRT2 --off --output CRT1 --mode 1280x1024 --pos 0x170 --rotate normal --output DFP2 --off --output DFP4 --off --output DFP1 --off

set $monitor22 DFP3
set $monitor17 CRT1

# wallpaper
exec_always feh --bg-scale /home/gianluigi/Imagens/Wallpaper/set/*.jpg

# compton (effects + transparency)
exec compton -b -f -c --inactive-dim 0.05

# font
font pango:System San Francisco Display 10

# floating window
assign [class="Lxappearance"] floating enable
#assign [class="Pavucontrol"] floating enable

# workspace naming
